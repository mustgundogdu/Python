import socket

def Main():
    host = '127.0.0.1'
    port = 5001

    b3kc4tsocket = socket.socket()
    b3kc4tsocket.connect((host, port))

    msj = input(" ? ")

    while msj != 'q':
        b3kc4tsocket.send(msj.encode())
        veri = b3kc4tsocket.recv(1024).decode()

        print('Received from server:' + veri)
        msj = input(" ? ")

        b3kc4tsocket.close()

        if __name__ == '__main__':
            Main()
